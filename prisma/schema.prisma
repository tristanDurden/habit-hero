generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  habits   Habit[]
  habitLog HabitLog[]
  folders  Folder[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Habit {
  id            String  @id
  title         String
  description   String
  frequency     String // store as JSON or CSV
  schedule      String  @db.Text // JSON array of dates
  counter       Int     @default(0)
  streak        Int     @default(0)
  lastCompleted Int     @default(0)
  doneToday     Boolean @default(false)
  userId        String
  updatedAt     Int
  user          User    @relation(fields: [userId], references: [id])

  habitLog HabitLog[]
  folders  Folder[]
}

model HabitLog {
  habitId   String
  date      String
  count     Int    @default(0)
  duration  Int    @default(0) // Duration in milliseconds
  userId    String
  updatedAt Int

  habit Habit @relation(fields: [habitId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@id([habitId, date, userId]) // only one entry per habit per day per user
}

model Folder {
  id        String @id
  name      String
  userId    String
  habitIds  Json   @db.Json
  updatedAt Int

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  habits Habit[]
}
